<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/number_button_background_color</item>
        <item name="android:textColor">@color/number_text_color</item>
    </style>

    <style name="OperationButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/operation_button_background_color</item>
        <item name="android:textColor">@color/operation_text_color</item>
    </style>

    <style name="EqualsButton" parent="OperationButton">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">@color/operation_button_background_color</item>
        <item name="android:textSize">26sp</item>
    </style>


</resources>
